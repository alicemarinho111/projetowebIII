<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Listagem de Passageiros</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
      }

      .container {
        max-width: 900px;
        margin-top: 50px;
        background-color: #ffffff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      }

      h1 {
        text-align: center;
        color: #343a40;
        margin-bottom: 30px;
      }

      .alert {
        margin-bottom: 20px;
      }

      .table {
        width: 100%;
        border: 1px solid #dee2e6;
        border-radius: 8px;
      }

      .table th,
      .table td {
        text-align: center;
        padding: 12px;
      }

      .table th {
        background-color: #e9ecef;
      }

      .table td {
        background-color: #f8f9fa;
      }

      .btn {
        font-size: 14px;
      }

      .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
      }

      .btn-info:hover {
        background-color: #138496;
        border-color: #117a8b;
      }

      .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
      }

      .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
      }

      .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
      }

      .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
      }

      .content-container {
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <%- include("../partials/cabecalho.ejs") %>
    <div class="container">
      <div class="content-container">
        <% if (status == "1") { %>
          <div class="alert alert-success alert-dismissible fade show">
            <button class="btn-close" data-bs-dismiss="alert"></button>
            Cadastrado com <b>sucesso!</b>
          </div>
        <% } %>
        <% if (status == "2") { %>
          <div class="alert alert-danger alert-dismissible fade show">
            <button class="btn-close" data-bs-dismiss="alert"></button>
            Removido com <b>sucesso!</b>
          </div>
        <% } %>
        <% if (status == "3") { %>
          <div class="alert alert-warning alert-dismissible fade show">
            <button class="btn-close" data-bs-dismiss="alert"></button>
            Atualizado com <b>sucesso!</b>
          </div>
        <% } %>

        <h1>Listagem de Passageiros</h1>

        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>CPF</th>
              <th>Nome</th>
              <th>Assento</th>
              <th>Detalhar</th>
              <th>Excluir</th>
              <th>Editar</th>
            </tr>
          </thead>
          <tbody>
            <% passageiros.forEach(passageiro => { %>
              <tr>
                <td><%= passageiro.cpf %></td>
                <td><%= passageiro.nome %></td>
                <td><%= passageiro.assento %></td>
                <td>
                  <a href="/passageiros/<%= passageiro.cpf %>">
                    <button type="button" class="btn btn-info">Detalhar</button>
                  </a>
                </td>
                <td>
                  <a href="/passageiros/remover/<%= passageiro.cpf %>">
                    <button
                      onclick="return confirm('Deseja realmente excluir?')"
                      type="button"
                      class="btn btn-danger"
                    >
                      Excluir
                    </button>
                  </a>
                </td>
                <td>
                  <a href="/passageiros/cadastrar/<%= passageiro.cpf %>">
                    <button type="button" class="btn btn-warning">Editar</button>
                  </a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <%- include("../partials/rodape.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>