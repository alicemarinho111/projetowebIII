<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listagem de Passageiros</title>
    <style>
        table{
            width: 100%;
            border: 1px solid black;
            text-align: center;
        }
        th, td{
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <%- include("../partials/cabecalho.ejs") %>
    <div class="container">
        <% if(status == "1") {%>
            <div class="alert alert-success alert-dismissible">
                <button class="btn-close" data-bs-dismiss="alert"></button>
                Cadastrado com <b>sucesso!</b>
            </div>
        <% } %>
        <% if(status == "2") {%>
            <div class="alert alert-danger alert-dismissible">
                <button class="btn-close" data-bs-dismiss="alert"></button>
                Removido com <b>sucesso!</b>
            </div>
        <% } %>
        <% if(status == "3") {%>
            <div class="alert alert-warning alert-dismissible">
                <button class="btn-close" data-bs-dismiss="alert"></button>
                Atualizado com <b>sucesso!</b>
            </div>
        <% } %>
        <table>
            <tr>
                <th>CPF</th>
                <th>Nome</th>
                <th>Assento</th>
                <th>Detalhar</th>
                <th>Excluir</th>
                <th>Editar</th>
            </tr>
            <% passageiros.forEach(passageiro => { %>
                <tr>
                    <td> <%= passageiro.cpf %> </td>
                    <td> <%= passageiro.nome %> </td>
                    <td> <%= passageiro.assento %> </td>
                    <td>
                        <a href="/passageiros/<%= passageiro.cpf %>">
                            <button type="button" class="btn btn-info">Detalhar</button>
                        </a>
                    </td>
                    <td>
                        <a href="/passageiros/remover/<%= passageiro.cpf %>">
                            <button onclick="return confirm('Deseja realmente excluir?')" type="button" class="btn btn-danger">Excluir</button>
                        </a>
                    </td>
                    <td>
                        <a href="/passageiros/cadastrar/<%= passageiro.cpf %>">
                            <button type="button" class="btn btn-warning">Editar</button>
                        </a>
                    </td>
                </tr>
            <% }) %>
        </table>
    </div>
    <%- include("../partials/rodape.ejs") %>
</body>
</html>
