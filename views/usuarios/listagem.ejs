<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Listagem de Usuários</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .container {
            max-width: 900px;
            margin: 50px auto;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            color: #343a40;
            margin-bottom: 20px;
        }

        table {
            margin-top: 20px;
        }

        .btn {
            font-size: 14px;
        }

        .btn-add {
            margin-bottom: 20px;
            display: flex;
            justify-content: flex-end;
        }
    </style>
</head>
<body>

    <%- include("../partials/cabecalho.ejs") %>

    <div class="container">
        <% if(status == "1") {%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                Cadastrado com <b>sucesso!</b>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if(status == "2") {%>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                Removido com <b>sucesso!</b>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <% if(status == "3") {%>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                Atualizado com <b>sucesso!</b>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <h1>Listagem de Usuários</h1>

        <div class="btn-add">
            <a href="/usuarios/cadastrar">
                <button type="button" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Adicionar Usuário
                </button>
            </a>
        </div>

        <table class="table table-hover table-bordered">
            <thead class="table-light">
                <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Detalhar</th>
                    <th>Excluir</th>
                    <th>Editar</th>
                </tr>
            </thead>
            <tbody>
                <% usuarios.forEach(usuario => { %>
                    <tr>
                        <td><%= usuario.nome %></td>
                        <td><%= usuario.email %></td>
                        <td>
                            <a href="/usuarios/<%= usuario._id %>">
                                <button type="button" class="btn btn-info">
                                    <i class="bi bi-eye"></i> Detalhar
                                </button>
                            </a>
                        </td>
                        <td>
                            <a href="/usuarios/remover/<%= usuario._id %>">
                                <button onclick="return confirm('Deseja realmente excluir?')" type="button" class="btn btn-danger">
                                    <i class="bi bi-trash"></i> Excluir
                                </button>
                            </a>
                        </td>
                        <td>
                            <a href="/usuarios/cadastrar/<%= usuario._id %>">
                                <button type="button" class="btn btn-warning">
                                    <i class="bi bi-pencil"></i> Editar
                                </button>
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <%- include("../partials/rodape.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
